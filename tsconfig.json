{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
   "typedocOptions": {
        "entryPoints": 
        ["src/classes/board.ts", 
        "src/classes/pill.ts", 
        "src/classes/halfpill.ts",
        "src/classes/virus.ts"
      ],
        "out": "docs"
    },
  "include": ["src"]
}
